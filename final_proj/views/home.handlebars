<form action="insert">
   <fieldset>
      <legend>Add an exercise</legend>
      <div class="box">
         <label>Name:</label>
         <input type="text" name="name" id="name" />
      </div>
      <div>
         <label>Reps:</label>
         <input type="number" name="reps" id="reps" />
      </div>
      <div>
         <label>Weight:</label>
         <input type="number" name="weight" id="weight" />
      </div>
      <div>
         <label>Date:</label>
         <input type="date" name="date" id="date" />
      </div>
      <div>
         <label>Lbs:</label>
         <input type="checkbox" name="lbs" id="lbs" />
      </div>
      <div>
         <input id="submit" type="submit" name="submit" value="Submit" />
      </div>
   </fieldset>
</form>

</br>

<h1>Exercises</h1>
<table id="dataTable">
   <thead>
	  <tr>
		 <th style="display:none">ID</th>
		 <th>Name</th>
		 <th>Reps</th>
		 <th>Weight</th>
		 <th>Date</th>
		 <th>Lbs</th>
		 <th>Update</th>
		 <th>Delete</th>
	  </tr>
   </thead>
   <tbody>
	{{#each records}}
		<tr>
			<td style="display:none">{{this.id}}</td>
			<td>{{this.name}}</td>
			<td>{{this.reps}}</td>
			<td>{{this.weight}}</td>
			<td>{{this.date}}</td>
			<td>{{this.lbs}}</td>
			<td><a href="http://52.41.86.148:3001/edit?id={{this.id}}">Update</a></td>
			<td><a href="#">Delete</a></td>
		</tr>
	{{/each}}
   </tbody>
</table>
	
<script src="/javascripts/home-scripts.js"></script>